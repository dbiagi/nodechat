extends ./layout.jade

block sidebar
    #sidebar-wrapper
        #sidebar-img-wrapper
            img.img-circle(src="http://fakeimg.pl/140x140/", alt="Imagem do Perfil")
        ul.sidebar-nav
            li
                a(href="#" class="active") Todos
            - var n = 0
            while n <= 5
                li
                    a(href="#")= 'User ' + n++

block page-content
    #page-content-wrapper
        #messages-wrapper
            ul#messages.list-unstyled(data-user-id="all")
        #chat-form-wrapper
            form#chat-form
                .input-group
                    input#m.form-control(autocomplete="off")
                    span.input-group-btn
                        button.btn.btn-primary(type="submit") Send

append javascripts
    script(src="/socket.io/socket.io.js", charset="utf-8")
    script(src="/js/chat.js", charset="utf-8")
    script(type="text/javascript").
        new Chat('', #{user.id}).initialize()
